<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<SeekBarPreference
		android:defaultValue="0"
		android:max="1000"
		android:id="@+id/pref_start"
		android:key="pref_start"
		android:title="Start Kanji's number"
		android:summary="Index of the list's first Kanji" />
	<SeekBarPreference
		android:defaultValue="10"
		android:max="1000"
		android:id="@+id/pref_end"
	    android:key="pref_end"
	    android:title="End Kanji's number"
	    android:summary="Index of the list's last Kanji" />
	<CheckBoxPreference
		android:defaultValue="false"
	    android:key="pref_show_resume_success"
	    android:title="@string/settings_resume_success"
	    android:summary="@string/settings_resume_success__s" />
	<CheckBoxPreference
		android:defaultValue="false"
	    android:key="pref_show_resume_failure"
	    android:title="@string/settings_resume_failure"
	    android:summary="@string/settings_resume_failure__s" />
</PreferenceScreen>